{
    "compilerOptions": {
      "target": "es2016",
      "module": "es2020",
      "moduleResolution": "node10",
      "rootDir": "./src",
      "outDir": "./build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": [
      "src/*.ts"  // Include all TypeScript files in the test directory
    ],
    "exclude": ["node_modules"]
  }

  